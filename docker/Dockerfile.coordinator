# Multi-stage build for COORDINATOR
FROM golang:1.24-alpine AS builder
WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o coordinator cmd/coordinator/main.go

FROM alpine:latest
RUN apk --no-cache add ca-certificates wget
WORKDIR /app
COPY --from=builder /build/coordinator .
EXPOSE 8090
ENTRYPOINT ["/app/coordinator"]
CMD ["--port=8090", "--etcd=etcd0:2379,etcd1:2379,etcd2:2379", "--redis=redis:6379"]