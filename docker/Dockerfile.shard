# Multi-stage build for SHARD SERVER
FROM golang:1.24-alpine AS builder
WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o shard-server cmd/searcher/main.go

FROM alpine:latest
RUN apk --no-cache add ca-certificates wget
WORKDIR /app
COPY --from=builder /build/shard-server .
EXPOSE 8080
ENTRYPOINT ["/app/shard-server"]